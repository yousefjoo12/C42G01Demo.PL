@model Department 


<div class="row">
	<div class="col-12 col-md-4">
		<div class="form-group certified-group row">
			<label class="col-4 col-md-4 align-self-center" asp-for="Code"></label>
			<div class="col-8 col-md-8">
				<input type="text" asp-for="Code" class="form-control"   />
				<span asp-validation-for="Code" class="text-danger"></span>

			</div>
		</div>
	</div>
	<div class="col-12 col-md-4">
		<div class="form-group certified-group row">
			<label class="col-4 col-md-4 align-self-center" asp-for="Name"></label>
			<div class="col-8 col-md-8">
				<input type="text" asp-for="Name" class="form-control"   />
				<span asp-validation-for="Name" class="text-danger"></span>

			</div>
		</div>
	</div>
	<div class="col-12 col-md-4">
		<div class="form-group certified-group row">
			<label class="col-4 col-md-4 align-self-center" asp-for="DateOfCreation"></label>
			<div class="col-8 col-md-8">
				<input type="text" asp-for="DateOfCreation" class="form-control" />
			</div>
		</div>
	</div>
</div> 